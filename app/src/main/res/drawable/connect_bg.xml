<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="13dip" />
            <gradient android:angle="-90" android:startColor=" #1b4f72" android:endColor="#154360"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="13dip" />
            <solid android:color="#154360"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="13dip" />
            <gradient android:angle="-90" android:startColor="#1b4f72" android:endColor=" #2874a6 " />
        </shape>
    </item>
</selector>