<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/bottomLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="12dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:id="@+id/rpm">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:src="@drawable/rpm"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:text="RPM"
                        android:textStyle="bold"
                        android:paddingBottom="10dp">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="12dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:id="@+id/speed">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:src="@drawable/speed"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center">
                        </ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textAlignment="center"
                            android:text="SPEED"
                            android:textStyle="bold"
                            android:paddingBottom="10dp">
                        </TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="12dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:id="@+id/engine_temperature">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:src="@drawable/enginetemperature"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center">
                        </ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textAlignment="center"
                            android:text="ENGINE_TEMPERATURE"
                            android:textStyle="bold"
                            android:paddingBottom="10dp">
                        </TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

        </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_margin="7dp"
        android:id="@+id/bottomLayout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">
        <Button
            android:textAllCaps="true"
            android:layout_weight="1"
            android:text="@string/connect"
            android:id="@+id/connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/connect_bg"
            android:textColor="#ffff"/>
        <Button
            android:layout_margin="7dp"
            android:textAllCaps="true"
            android:layout_weight="1"
            android:text="@string/scan"
            android:id="@+id/scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/scan_bg"
            android:textColor="#ffffff"/>
        <Button
            android:textColor="#ffffff"
            android:background="@drawable/cancel_bg"
            android:textAllCaps="true"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>